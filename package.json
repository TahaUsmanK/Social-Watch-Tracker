{
  "name": "social-watch-tracker",
  "version": "0.1.0",
  "description": "Tracks watch time and counts for Shorts, Reels, TikToks, etc.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build-background && npm run build-content && npm run build-options && npm run copy-assets",
    "build-background": "tsc && vite build --config vite.scripts.config.ts",
    "build-content": "vite build --config vite.content.config.ts",
    "build-options": "vite build --config vite.options.config.ts",
    "copy-assets": "cp manifest.json dist/ && cp src/overlay/overlay.css dist/",
    "preview": "vite preview",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "chart.js": "^4.4.0",
    "react-chartjs-2": "^5.2.0",
    "idb": "^8.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/chrome": "^0.0.254",
    "@vitejs/plugin-react": "^4.2.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}